{% extends "layout.nunjucks" %}

{% block content %}
<article>
  <header>
    <h2>{% if title %}{{ title }}{% else %}An error occurred{% endif %}</h2>
  </header>

  {% if errorId %}
  <div class="alert alert--error">An unexpected error occurred. This has been logged. To reporrt this error, quote the reference "{{errorId}}".</div>
  {% else %}
  <div class="alert alert--error">{{message}}</div>
  {% endif %}
</article>
{% endblock %}
