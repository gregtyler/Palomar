{% extends "layout.nunjucks" %}

{% block content %}
<article>
  <header>
    <h2>{% if title %}{{ title }}{% else %}An error occurred{% endif %}</h2>
  </header>

  <div class="alert alert--error">An unexpected error occurred. This has been logged. To report this error, quote the reference "{{errorId}}".</div>
</article>
{% endblock %}
