{% extends "layout.nunjucks" %}

{% block content %}
<article>
  <header class="c-article__header">
    <h2 class="c-article__header-title">{{title}}</h2>
    <p class="c-article__byline">Posted by <time datetime="{{published | date('YYYY-MM-DDTHH:mm:ss\\Z')}}">{{author.name}}</time> at {{published | date}}</p>
  </header>

  <div class="c-article o-overflow o-text-container u-clearfix">
    {{body | safe}}
  </div>
</article>
{% endblock %}

{% block title %}
  {{title}}
{% endblock %}
